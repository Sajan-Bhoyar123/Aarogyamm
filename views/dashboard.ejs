<%- layout("/layouts/boilerplate") %>
<style>
  /* General Styles */
  body {
    font-family: 'Inter', sans-serif;
    color: #333;
    line-height: 1.6;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.2rem;
    margin-bottom: 1rem;
    color: #1A73E8;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #666;
  }

  /* Hero Section */
  .hero-section {
    padding: 3rem 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9f5f4 100%);
  }

  .hero-content {
    padding: 2rem 0;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: #1A73E8;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #555;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }


  /* Button Styles (keeping the original colors) */

  .signup {
    border: 2px solid white;
  }

  .btn-custom:hover {
    background-color: #1A73E8;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px #1A73E8;
  }

  .btn-outline-custom {
    border: 2px solid #1A73E8;
    color: #1A73E8;
    background-color: transparent;
    padding: 12px 24px;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: 0.3s ease;
    display: inline-block;
  }

  .btn-outline-custom:hover {
    background-color: #1A73E8;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px #1A73E8;
  }


  /* Responsive Styles */
  @media (max-width: 991px) {
    .hero-content {
      text-align: center;
      padding: 2rem 1rem;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-buttons {
      justify-content: center;
    }

    .hero-image {
      margin-top: 2rem;
    }

  
   
  }

  @media (max-width: 767px) {
    .section-header h2 {
      font-size: 1.8rem;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

   

    

    
  }
</style>

<div class="landing-container">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 hero-content">
          <h1>Healthcare Management Simplified</h1>
          <p class="hero-subtitle">
            Aarogyam is a student-focused healthcare management system designed to securely store and manage health records, streamline medical documentation, and enhance accessibility to healthcare services.
          </p>
          <div class="hero-buttons">
            <a href="/auth/signup" class="btn-custom">Get Started</a>
            <a href="#features" class="btn-outline-custom">Learn More</a>
          </div>
        </div>
        <div class="col-lg-6 hero-image">
          <img src="/img01.jpg" alt="Healthcare professionals" class="img-fluid" />
        </div>
      </div>
    </div>
  </section>

</div>
