<%- layout("./layouts/boilerplate") %>
<style>
    /* Reset & Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', sans-serif;
  background-color: #f9fbff;
  color: #333;
}

/* Hero Section */
.hero {
  background: linear-gradient(to right, #007bff, #00c6ff);
  padding: 4rem 2rem;
  text-align: center;
  color: white;
}

.hero h1 {
  font-size: 2.8rem;
  margin-bottom: 0.5rem;
}

.hero p {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
}

.back-btn {
  background: white;
  color: #007bff;
  padding: 0.6rem 1.2rem;
  text-decoration: none;
  border-radius: 6px;
  font-weight: bold;
  transition: 0.3s ease;
}

.back-btn:hover {
  background: #f0f0f0;
}

/* Features Grid */
.features {
  padding: 3rem 2rem;
}

.features-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.feature-box {
  background-color: #fff;
  border-radius: 15px;
  padding: 2rem 1.5rem;
  text-align: center;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease-in-out;
  position: relative;
  overflow: hidden;
}

.feature-box:hover {
  transform: translateY(-8px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
}

.feature-box i {
  font-size: 2.5rem;
  color: #007bff;
  margin-bottom: 1rem;
  transition: 0.3s;
}

.feature-box h3 {
  font-size: 1.4rem;
  margin-bottom: 0.6rem;
  color: #007bff;
}

.feature-box p {
  font-size: 0.95rem;
  color: #555;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .hero h1 {
    font-size: 2rem;
  }

  .hero p {
    font-size: 1rem;
  }
}

</style>
