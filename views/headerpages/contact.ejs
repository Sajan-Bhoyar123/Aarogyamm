<%- layout("./layouts/boilerplate") %>
<style>
    /* Reset & Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', sans-serif;
  background-color: #f8fbff;
  color: #333;
  line-height: 1.6;
}

/* Hero Banner */
.contact-hero {
  background: linear-gradient(to right, #007bff, #00c6ff);
  color: white;
  padding: 4rem 2rem;
  text-align: center;
}

.contact-hero h1 {
  font-size: 2.8rem;
  margin-bottom: 0.5rem;
}

.contact-hero p {
  font-size: 1.1rem;
  margin-bottom: 1.5rem;
}

.back-btn {
  background: white;
  color: #007bff;
  padding: 0.6rem 1.2rem;
  text-decoration: none;
  border-radius: 6px;
  font-weight: bold;
  transition: 0.3s ease;
}

.back-btn:hover {
  background: #f0f0f0;
}

/* Contact Info Section */
.contact-info {
  padding: 3rem 2rem;
  background: #fff;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2rem;
  max-width: 1000px;
  margin: 0 auto;
}

.info-card {
  background: #f0f8ff;
  padding: 2rem;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease;
}

.info-card:hover {
  transform: translateY(-5px);
}

.info-card i {
  font-size: 2rem;
  color: #007bff;
  margin-bottom: 0.5rem;
}

.info-card h3 {
  font-size: 1.2rem;
  color: #007bff;
  margin-bottom: 0.3rem;
}

/* Contact Form Section */
.contact-form-section {
  background: #ffffff;
  padding: 3rem 2rem;
}

.form-container {
  max-width: 700px;
  margin: auto;
  background: #f0f8ff;
  padding: 2.5rem;
  border-radius: 15px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.06);
}

.form-container h2 {
  font-size: 1.8rem;
  color: #007bff;
  text-align: center;
  margin-bottom: 2rem;
}

.contact-form .form-group {
  margin-bottom: 1.2rem;
}

.contact-form input,
.contact-form textarea {
  width: 100%;
  padding: 0.9rem;
  border: 1px solid #ccc;
  border-radius: 8px;
  font-size: 1rem;
  background: #fff;
}

.contact-form input:focus,
.contact-form textarea:focus {
  outline: none;
  border-color: #007bff;
  box-shadow: 0 0 3px #007bff55;
}

.form-btn {
  width: 100%;
  background-color: #007bff;
  color: white;
  padding: 0.9rem;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  cursor: pointer;
  transition: 0.3s;
}

.form-btn:hover {
  background-color: #0056b3;
}

/* Responsive Adjustments */
@media (max-width: 600px) {
  .contact-hero h1 {
    font-size: 2rem;
  }

  .form-container {
    padding: 1.5rem;
  }
}

</style>
  <section class="contact-hero">
    <div class="hero-content">
      <h1>Contact Us</h1>
      <p>We’d love to hear from you. Reach out with your questions or feedback!</p>
      <a href="/home" class="back-btn">← Back to Home</a>
    </div>
  </section>

  <!-- Contact Info Cards -->
  <section class="contact-info">
    <div class="info-grid">
      <div class="info-card">
        <i class="fas fa-phone-alt"></i>
        <h3>Phone</h3>
        <p>+91 98765 43210</p>
      </div>
      <div class="info-card">
        <i class="fas fa-envelope"></i>
        <h3>Email</h3>
        <p>support@smarthealthai.com</p>
      </div>
      <div class="info-card">
        <i class="fas fa-map-marker-alt"></i>
        <h3>Address</h3>
        <p>Mumbai, Maharashtra, India</p>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="contact-form-section">
    <div class="form-container">
      <h2>Send Us a Message</h2>
      <form action="/header/contact" method="POST" class="contact-form">
        <div class="form-group">
          <input type="text" name="name" placeholder="Your Name" required />
        </div>
        <div class="form-group">
          <input type="email" name="email" placeholder="Your Email" required />
        </div>
        <div class="form-group">
          <textarea name="message" rows="6" placeholder="Your Message" required></textarea>
        </div>
        <button type="submit" class="form-btn">Send Message</button>
      </form>
    </div>
  </section>