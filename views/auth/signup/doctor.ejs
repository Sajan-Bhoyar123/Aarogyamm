  <script>
    // Bootstrap custom validation script
    (function () {
      'use strict';
      window.addEventListener('load', function () {
        // Get all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.getElementsByClassName('needs-validation');
        // Loop over them and prevent submission if invalid
        Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();

    // Your Firebase config from Step 3
    const firebaseConfig = {
      apiKey: "AIzaSyBL1BHmP43qqUQlOWIMGQ27WtMoLai8Klg",
      authDomain: "aarogyam-71fdd.firebaseapp.com",
      projectId: "aarogyam-71fdd",
      storageBucket: "aarogyam-71fdd.firebasestorage.app",
      messagingSenderId: "672290909959",
      appId: "1:672290909959:web:cb07d4832e2137ae2cdfa2"
    };

    // Initialize Firebase
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();

    function googleSignIn() {
      const provider = new firebase.auth.GoogleAuthProvider();
      auth.signInWithPopup(provider)
        .then((result) => {
          const user = result.user;
          fetch('/auth/google/doctor', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({  // Passed as a JSON object
              email: user.email,
              username:  user.displayName,
              uid:  user.uid
            })
          })
          .then(res => res.json()) // Convert into js object
          .then(data => {
            if (!data.success) {
              document.getElementById("saveErrorAlert").classList.remove("d-none");
              return;
            }
            // if they already existed we show popup and logged in
            if (!data.isNewUser) {
              document.getElementById("userExistAlert").classList.remove("d-none");
            }
            // role-based redirect
            // Redirect after short delay so user can see toast
            setTimeout(() => {
              const destination = data.role === 'doctor'
                ? '/doctor/dashboard'
                : '/patient/dashboard';
              window.location.href = destination;
            }, 2000);  // Wait 1.8 seconds before redirect
          });
        })
        .catch((error) => {
          console.error('Google Sign-in error:', error);
        });
    }
  </script>
