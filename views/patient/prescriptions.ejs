<%- layout("./layouts/patientboilerplate") %>

<div class="page-container container my-5">
    <div class="page-header mb-4">
        <h2 class="h3 font-weight-bold">Prescriptions</h2>
    </div>

    <div class="list-container">
        <% if (appointments.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-file-medical fa-3x text-muted mb-3"></i>
                <p class="text-muted">No prescriptions found.</p>
            </div>
        <% } else { %>
            <% appointments.forEach((record, index) => { %>
                <div class="prescription-card">
                    <div class="prescription-header">
                        <div class="prescription-number">
                            <span class="number-badge"><%= index + 1 %></span>
                        </div>
                        <div class="prescription-info">
                            <h5 class="prescription-title">
                                <% if (record.disease) { %>
                                    <%= record.disease %>
                                <% } else { %>
                                    Medical Prescription
                                <% } %>
                            </h5>
                            <p class="prescription-reason"><%= record.reason %></p>
                        </div>
                        <div class="prescription-meta">
                            <div class="doctor-info">
                                <i class="fas fa-user-md text-primary"></i>
                                <span><%= record.doctorId.username %></span>
                            </div>
                            <div class="date-info">
                                <i class="fas fa-calendar text-muted"></i>
                                <span><%= new Date(record.createdAt).toLocaleDateString() %></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="prescription-actions">
                        <% if (record.attachments && record.attachments.length > 0) { %>
                            <% for (let file of record.attachments) { %>
                                <% if (file) { %>
                                    <% 
                                        const isPdf = file.toLowerCase().includes('.pdf');
                                        let viewUrl = file;
                                        let downloadUrl = file;
                                        
                                        if (isPdf) {
                                            viewUrl = file.replace('/upload/', '/upload/fl_attachment/');
                                            downloadUrl = file.replace('/upload/', '/upload/fl_attachment/');
                                        }
                                    %>
                                    <a href="<%= viewUrl %>" class="btn btn-outline-primary btn-sm" target="_blank">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="<%= downloadUrl %>" class="btn btn-outline-success btn-sm" target="_blank" download>
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                    <a href="#" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="setAppointmentId('<%= record._id %>', '<%= file %>')">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                <% } %>
                            <% } %>
                        <% } else { %>
                            <span class="text-muted">No files attached</span>
                        <% } %>
                    </div>
                </div>
                
                <% if (index < appointments.length - 1) { %>
                    <hr class="prescription-divider">
                <% } %>
            <% }); %>
        <% } %>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this prescription file?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function setAppointmentId(recordId, filePath) {
        const deleteForm = document.getElementById("deleteForm");
        if (deleteForm) {
            deleteForm.action = `/patient/prescriptions/delete/${recordId}?file=${encodeURIComponent(filePath)}`;
        }
    }
</script>

