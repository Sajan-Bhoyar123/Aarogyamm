

<% if(error && error.length>0) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
        <b>Warning!</b>&nbsp;<%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% }else if(success && success.length >0) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
        <b>Congratulation!</b>&nbsp; <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (danger && danger.length) { %>
    <div style="color: #dc3545; font-weight: 500; text-align: center; margin-bottom: 1rem;">
      <%= danger %>
    </div>
<% } %>
